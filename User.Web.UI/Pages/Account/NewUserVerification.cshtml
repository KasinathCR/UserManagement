@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model User.Web.Pages.Account.NewUserVerificationModel
@{
	Layout = $"_Layout";
	ViewData["Title"] = "NewUserVerification";
}

<h1>New User Verification</h1>

<fieldset class="account">
	<form method="post">

		@if (!ModelState.IsValid)
		{
			<div class="col-md-offset-2 col-md-10">
				<h3 class="text-danger">Validation Errors</h3>
				<div asp-validation-summary="All"></div>
				<hr />
			</div>
		}

		<div class="form-group">
			<label asp-for="VerificationCode" class="col-sm-2 control-label"></label>
			<div class="col-sm-10">
				<input asp-for="VerificationCode" class="form-control" placeholder="VerificationCode" />
				<span asp-validation-for="VerificationCode"></span>
			</div>
		</div>

		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<button type="submit" class="btn btn-primary">Verify</button>
			</div>
		</div>
	</form>
</fieldset>
